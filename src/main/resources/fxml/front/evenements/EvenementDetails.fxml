<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox style="-fx-padding: 15; -fx-spacing: 10; -fx-background-color: #f0f0f0;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="← Retour" fx:id="backButton" style="-fx-padding: 8 15;"/>
                <Label fx:id="evenementNameLabel" text="Événement" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="15" style="-fx-padding: 15;">
                <ImageView fx:id="evenementImage" fitHeight="300" fitWidth="400" preserveRatio="true"/>
                <VBox spacing="10">
                    <Label fx:id="evenementDateLabel" style="-fx-font-size: 14;"/>
                    <Label fx:id="evenementLieuLabel" style="-fx-font-size: 14;"/>
                    <Label text="Description:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="evenementDescriptionArea" wrapText="true" editable="false" prefRowCount="5"/>
                    <Label fx:id="evenementCategoryLabel" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

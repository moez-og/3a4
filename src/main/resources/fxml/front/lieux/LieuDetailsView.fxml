        <Button text="Ouvrir Maps" onAction="#openMaps" styleClass="primaryBtn"/>
    </HBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="detailsScroll">
        <content>
            <VBox spacing="14">

                <ImageView fx:id="image"
                           fitWidth="980" fitHeight="340"
                           preserveRatio="false"
                           styleClass="detailsHeroImg"/>

                <VBox spacing="10" styleClass="detailsCard">
                    <Label fx:id="name" text="Nom du lieu" styleClass="detailsTitle"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="categorie" text="Categorie" styleClass="badge"/>
                        <Label fx:id="type" text="PUBLIC" styleClass="badgeMuted"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="budget" text="" styleClass="detailsHint"/>
                    </HBox>

                    <Label fx:id="ville" text="Ville" styleClass="detailsLine"/>
                    <Label fx:id="adresse" text="Adresse" styleClass="detailsLine"/>
                    <Label fx:id="coords" text="CoordonnÃ©es" styleClass="detailsHint"/>

                    <Label fx:id="description" text="" wrapText="true" styleClass="detailsDesc"/>

                    <HBox spacing="14" alignment="CENTER_LEFT">
                        <Label fx:id="telephone" text="" styleClass="detailsMini"/>
                        <Label fx:id="siteWeb" text="" styleClass="detailsMini"/>
                        <Label fx:id="instagram" text="" styleClass="detailsMini"/>
                    </HBox>
                </VBox>

                <!-- HORAIRES -->
                <VBox fx:id="horaireCard" spacing="10" styleClass="detailsCard">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸ•  Horaires d'ouverture" styleClass="avisTitle"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="badgeOuvert" text="OUVERT" styleClass="badgeOuvert"
                               visible="false" managed="false"/>
                        <Label fx:id="badgeFerme"  text="FERMÃ‰"  styleClass="badgeFerme"
                               visible="false" managed="false"/>
                    </HBox>
                    <VBox fx:id="horairesList" spacing="6"/>
                    <Label fx:id="horairesEmpty" text="Aucun horaire renseignÃ©."
                           styleClass="detailsHint" visible="false" managed="false"/>
                </VBox>

                <!-- AVIS -->
                <VBox spacing="12" styleClass="avisCard">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="avisTitle" text="Avis des visiteurs / 0" styleClass="avisTitle"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="avisAvg" text="â€”" styleClass="avisAvg"/>
                        <Button text="+ Ajouter avis" onAction="#openAddAvis" styleClass="primaryBtn"/>
                    </HBox>

                    <TextField fx:id="avisSearchField" promptText="Recherchez les avis" styleClass="avisSearch"/>

                    <Label fx:id="avisEmpty" text="Aucun avis pour le moment." styleClass="detailsHint"
                           visible="false" managed="false"/>

                    <VBox fx:id="avisList" spacing="10"/>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>
</VBox>
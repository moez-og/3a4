<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.front.sorties.ParticipationDialogController"
      spacing="14"
      styleClass="participRoot"
      stylesheets="@/styles/sorties/participation-dialog.css">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <VBox spacing="6" styleClass="participHeader">
        <Label text="Participation" styleClass="participTitle"/>
        <Label text="Remplis le formulaire puis envoie ta demande." styleClass="participSub"/>
    </VBox>

    <VBox spacing="10" styleClass="participCard">
        <Label fx:id="lblTitre" text="—" styleClass="annonceTitle" wrapText="true"/>
        <Label fx:id="lblMeta" text="—" styleClass="annonceMeta" wrapText="true"/>
    </VBox>

    <VBox spacing="12" styleClass="participCard">
        <Label text="Contact" styleClass="sectionTitle"/>

        <HBox spacing="10" styleClass="segRow">
            <ToggleButton fx:id="tbEmail" text="Email" styleClass="segBtn"/>
            <ToggleButton fx:id="tbPhone" text="Téléphone" styleClass="segBtn"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <TextField fx:id="tfEmail" promptText="Email"/>
        <TextField fx:id="tfPhone" promptText="Téléphone (8 chiffres) — ex: 23456789"/>

        <Label text="Commentaire (optionnel)" styleClass="sectionTitle"/>
        <TextArea fx:id="taComment" promptText="Ex: Je viens avec un ami, je suis ponctuel…" prefRowCount="3"/>
    </VBox>

    <VBox spacing="10" styleClass="participCard">
        <Label text="Questions" styleClass="sectionTitle"/>
        <VBox fx:id="questionsBox" spacing="10"/>
    </VBox>

    <Label fx:id="lblError" text="—" styleClass="errorBanner" visible="false" managed="false"/>

    <HBox spacing="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Annuler" onAction="#close" styleClass="ghostBtn"/>
        <Button fx:id="btnSubmit" text="Envoyer la demande" onAction="#submit" styleClass="primaryBtn"/>
    </HBox>

</VBox>
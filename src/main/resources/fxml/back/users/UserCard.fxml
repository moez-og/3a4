<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.back.users.UserCardController" spacing="0" prefWidth="280" prefHeight="320" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-color: #e1e6ef; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 8, 0, 0, 3);">
    <children>
        <!-- Image en haut -->
        <ImageView fx:id="userImageView" fitWidth="280" fitHeight="160" preserveRatio="false" style="-fx-background-radius: 12 12 0 0;"/>
        
        <!-- Informations en bas -->
        <VBox spacing="8" style="-fx-padding: 16;" VBox.vgrow="ALWAYS">
            <children>
                <!-- Nom et Rôle -->
                <HBox spacing="8" alignment="CENTER_LEFT" prefHeight="30">
                    <children>
                        <Label fx:id="nameLabel" text="Nom Prenom" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="roleLabel" text="ABONNE" style="-fx-font-size: 10; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 4 10 4 10; -fx-background-color: #e67e22; -fx-background-radius: 12;"/>
                    </children>
                </HBox>
                
                <!-- Email -->
                <Label fx:id="emailLabel" text="email@example.com" style="-fx-font-size: 11; -fx-text-fill: #4b5f73; -fx-wrap-text: true;" wrapText="true"/>
                
                <!-- Téléphone -->
                <Label fx:id="phoneLabel" text="Tel: -" style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;"/>
            </children>
        </VBox>
    </children>
</VBox>

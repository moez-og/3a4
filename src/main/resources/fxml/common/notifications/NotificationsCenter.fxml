<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.common.notifications.NotificationsCenterController"
      spacing="12"
      style="-fx-background-color: rgba(255,255,255,0.92); -fx-padding: 14; -fx-background-radius: 18;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Notifications" style="-fx-font-size: 18px; -fx-font-weight: 900; -fx-text-fill: #163a5c;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnMarkAll" text="Tout marquer comme lu"
                style="-fx-background-color: rgba(15,23,42,0.06); -fx-background-radius: 14; -fx-font-weight: 900; -fx-cursor: hand;"/>
        <Button fx:id="btnRefresh" text="RafraÃ®chir"
                style="-fx-background-color: rgba(15,23,42,0.06); -fx-background-radius: 14; -fx-font-weight: 900; -fx-cursor: hand;"/>
    </HBox>

    <Label fx:id="emptyLabel" text="Aucune notification."
           style="-fx-text-fill: rgba(22,58,92,0.70); -fx-font-weight: 800;"/>

    <ScrollPane fitToWidth="true" prefHeight="540"
                style="-fx-background-color: transparent;" hbarPolicy="NEVER">
        <content>
            <VBox fx:id="listBox" spacing="10">
                <padding>
                    <Insets top="6" right="2" bottom="6" left="2"/>
                </padding>
            </VBox>
        </content>
    </ScrollPane>

</VBox>
